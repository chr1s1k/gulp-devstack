{
	"env": {
			"browser": true,
			"es6": true,
			"node": true
	},
	"extends": [
		"eslint:recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
			"ecmaVersion": 2018,
			"sourceType": "module"
	},
	"rules": {
			"indent": [
				"error",
				"tab",
				{
					"SwitchCase": 1
				}
			],
			"linebreak-style": [
					"error",
					"windows"
			],
			"quotes": [
					"error",
					"single"
			],
			"semi": [
					"error",
					"never"
			]
	}
}